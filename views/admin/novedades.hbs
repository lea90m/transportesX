<div class="container">
    <div class="row">
        <div class="col">
            <p class="text-end"> Hola {{usuario}} <a class="btn btn-danger">Cerrar Sessión <i class="fas fa-sign-out-alt"></i></a>

            </p>

        </div>
        <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>

        <div class="row" style="margin-top:20px">
            <div class="col">
                <table class="table">
                    <thead>
                        
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Título</th>
                            <th scope="col" class="text-end">Acciones</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td> 
                            <td class="text-end"><a href="" class="btn btn-secondary"><i class="fas fa-pen-square"></i></a>
                             <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash-alt"></i></a></td>
                        </tr>
                        {{/each}}
                      </tbody>  

                </table>
            </div>
        </div>

    </div>
    </div>
</div>
